<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#a9f2fd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".payment">

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:background="@android:color/transparent"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>


    <TextView
        android:paddingStart="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Pleas Add your Payment Information" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Information"
            android:textSize="16sp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp">

            <LinearLayout
                android:background="#dbf2ff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp">

                    <LinearLayout
                        android:paddingStart="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Card number"
                            />

                        <EditText
                            android:hint="4444 4444 4444 4444"
                            android:id="@+id/etCardNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="number"
                            android:maxLength="19"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <ImageButton
                        android:paddingEnd="5dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:background="@null"
                        android:src="@drawable/visa"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <!-- خط أفقي -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#B0B0B0" />

                <!-- تحت: اتنين EditText جنب بعض وبينهم خط عمودي -->
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:paddingVertical="5dp"
                        android:paddingStart="10dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="MM/YY"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:inputType="number"
                                android:id="@+id/etMM"
                                android:maxLength="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="MM"
                                android:background="@null"
                                android:textSize="22sp"/>

                            <TextView
                                android:layout_marginHorizontal="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/"
                                android:textSize="22sp"/>

                            <EditText
                                android:inputType="number"
                                android:id="@+id/etYY"
                                android:maxLength="2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="YY"
                                android:textSize="22sp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- خط عمودي -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#B0B0B0" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <LinearLayout
                            android:paddingVertical="5dp"
                            android:paddingStart="10dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CVC"
                                />

                            <EditText
                                android:inputType="number"
                                android:id="@+id/etCVC"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:maxLength="3"
                                android:hint="CVC"
                                android:textSize="22sp"/>

                        </LinearLayout>

                        <ImageButton
                            android:paddingEnd="5dp"
                            android:layout_width="45dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:background="@null"
                            android:src="@drawable/cvv"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textSize="16sp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#dbf2ff"
            app:cardElevation="6dp">

            <Spinner
                android:layout_marginVertical="14dp"
                android:id="@+id/spCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/countries_array"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:backgroundTint="#008dff"
            app:cardElevation="6dp">

            <Button
                android:id="@+id/btnPay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:text=""
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>